######################################################################
# seed.config (CR6606 / ramips mt7621)
# Purpose: Lean home LAN: HTTP LuCI, OpenSSL TLS (CA certs),
#          DoH/SmartDNS + Cloudflared, QoS, diagnostics + bandwidth,
#          mDNS + UPnP, web terminal; no USB/storage/VPN.
######################################################################

##### 1. Target / Profile #####
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_xiaomi_mi-router-cr6606=y

##### 2. Core System & Base Services #####
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_uhttpd-mod-ubus=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-mod-status=y

##### 3. User Interface Enhancements #####
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_LUCI_LANG_zh_Hans=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-app-argon-config=y
CONFIG_PACKAGE_luci-i18n-argon-config-zh-cn=y

##### 4. Wireless #####
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_kmod-mt7915e=y
CONFIG_PACKAGE_wireless-regdb=y
CONFIG_PACKAGE_wpad-openssl=y

##### 5. QoS (nftables based) #####
CONFIG_PACKAGE_nft-qos=y
CONFIG_PACKAGE_luci-app-nft-qos=y
CONFIG_PACKAGE_luci-i18n-nft-qos-zh-cn=y

##### 6. Diagnostics / Troubleshooting #####
CONFIG_PACKAGE_iperf3=y
CONFIG_PACKAGE_tcpdump-mini=y

##### 7. Bandwidth Monitoring #####
CONFIG_PACKAGE_luci-app-nlbwmon=y
CONFIG_PACKAGE_luci-app-wrtbwmon=y
CONFIG_PACKAGE_nlbwmon=y
CONFIG_PACKAGE_wrtbwmon=y
CONFIG_PACKAGE_luci-i18n-nlbwmon-zh-cn=y
CONFIG_PACKAGE_luci-i18n-wrtbwmon-zh-cn=y

##### 8. Web Terminal #####
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_ttyd=y
CONFIG_PACKAGE_luci-i18n-ttyd-zh-cn=y

##### 9. Application Filter (OAF) #####
CONFIG_PACKAGE_appfilter=y
CONFIG_PACKAGE_kmod-oaf=y
CONFIG_PACKAGE_luci-app-oaf=y
CONFIG_PACKAGE_luci-i18n-oaf-zh-cn=y

##### 10. Online Users #####
CONFIG_PACKAGE_luci-app-onliner=y
CONFIG_PACKAGE_luci-i18n-onliner-zh-cn=y

##### 11. Package Manager UI #####
CONFIG_PACKAGE_luci-app-package-manager=y
CONFIG_PACKAGE_luci-i18n-package-manager-zh-cn=y

##### 12. Temperature Monitoring #####
CONFIG_PACKAGE_luci-app-temp-status=y

##### 13. Push Notifications #####
CONFIG_PACKAGE_luci-app-pushbot=y
CONFIG_PACKAGE_luci-i18n-pushbot-zh-cn=y

##### 14. Network Tools #####
CONFIG_PACKAGE_socat=y
CONFIG_PACKAGE_luci-app-socat=y
CONFIG_PACKAGE_luci-i18n-socat-zh-cn=y

##### 15. Advanced Networking Tools #####
CONFIG_PACKAGE_curl=y
CONFIG_LIBCURL_OPENSSL=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_jq=y
CONFIG_PACKAGE_iputils-arping=y
CONFIG_PACKAGE_tcping=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_lsof=y
CONFIG_PACKAGE_picocom=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_coreutils-base64=y
CONFIG_PACKAGE_coreutils-nohup=y

##### 16. IoT / Local Discovery #####
CONFIG_PACKAGE_avahi-daemon=y
CONFIG_PACKAGE_avahi-dbus-daemon=y
CONFIG_PACKAGE_avahi-utils=y
CONFIG_PACKAGE_nss-mdns=y
CONFIG_PACKAGE_miniupnpd-nftables=y
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y

##### 17. Cloudflared (DNS over HTTPS tunnel) #####
CONFIG_PACKAGE_cloudflared=y
CONFIG_PACKAGE_luci-app-cloudflared=y
CONFIG_PACKAGE_luci-i18n-cloudflared-zh-cn=y


##### 18. HTTPS DNS Proxy (DoH client) #####
CONFIG_PACKAGE_https-dns-proxy=y
CONFIG_PACKAGE_luci-app-https-dns-proxy=y
CONFIG_PACKAGE_luci-i18n-https-dns-proxy-zh-cn=y


##### 19. DNS / DHCP Backend #####
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dnsmasq_full_auth=y
CONFIG_PACKAGE_dnsmasq_full_conntrack=y
CONFIG_PACKAGE_dnsmasq_full_dhcp=y
CONFIG_PACKAGE_dnsmasq_full_dhcpv6=y
CONFIG_PACKAGE_dnsmasq_full_dnssec=y
CONFIG_PACKAGE_dnsmasq_full_noid=y
CONFIG_PACKAGE_dnsmasq_full_tftp=y
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_smartdns=y
CONFIG_PACKAGE_luci-i18n-smartdns-zh-cn=y
CONFIG_PACKAGE_adblock=y
CONFIG_PACKAGE_luci-app-adblock=y
CONFIG_PACKAGE_luci-i18n-adblock-zh-cn=y
CONFIG_PACKAGE_bind-client=y
CONFIG_PACKAGE_bind-host=y
CONFIG_PACKAGE_bind-libs=y
CONFIG_BIND_ENABLE_DOH=y


##### 20. TLS / Crypto (OpenSSL backend) #####
CONFIG_PACKAGE_libustream-openssl=y
CONFIG_PACKAGE_libopenssl=y
CONFIG_PACKAGE_libopenssl-conf=y
CONFIG_PACKAGE_libgnutls=y

##### 21. Data Files #####
CONFIG_PACKAGE_vim-full=y

##### 22. Timezone & Locale #####
CONFIG_PACKAGE_zoneinfo-europe=y
CONFIG_PACKAGE_zoneinfo-core=y

##### 23. Firewall UI #####
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y

######################################################################
# End of seed.config
######################################################################
