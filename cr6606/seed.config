######################################################################
# seed.config (CR6606 / ramips mt7621)
# Purpose: Lean home LAN: HTTP LuCI, OpenSSL TLS (CA certs),
#          DoH/SmartDNS + Cloudflared, QoS, diagnostics + bandwidth,
#          mDNS + UPnP, web terminal; no USB/storage/VPN.
######################################################################

##### 1. Target / Profile #####
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_xiaomi_mi-router-cr6606=y

##### 2. Core System & Base Services #####
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_uhttpd-mod-ubus=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-mod-status=y                # Keep status pages

##### 3. User Interface Enhancements #####
CONFIG_PACKAGE_luci-theme-argon=y

##### 4. Wireless #####
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_kmod-mt7915e=y
CONFIG_PACKAGE_wireless-tools=y
CONFIG_PACKAGE_wpad-openssl=y

##### 5. QoS (nftables based) #####
CONFIG_PACKAGE_nft-qos=y
CONFIG_PACKAGE_luci-app-nft-qos=y

##### 6. Diagnostics / Troubleshooting #####
CONFIG_PACKAGE_iperf3=y
CONFIG_PACKAGE_tcpdump-mini=y

##### 6b. Bandwidth Monitoring #####
CONFIG_PACKAGE_luci-app-nlbwmon=y
CONFIG_PACKAGE_luci-app-wrtbwmon=y
CONFIG_PACKAGE_nlbwmon=y
CONFIG_PACKAGE_wrtbwmon=y
CONFIG_PACKAGE_luci-i18n-nlbwmon-zh-cn=y
CONFIG_PACKAGE_luci-i18n-wrtbwmon-zh-cn=y

##### 6c. Web Terminal #####
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_ttyd=y

##### 7. IoT / Local Discovery #####
CONFIG_PACKAGE_avahi-daemon=y            # mDNS/Service Discovery daemon
CONFIG_PACKAGE_avahi-dbus-daemon=y
CONFIG_PACKAGE_avahi-utils=y
CONFIG_PACKAGE_nss-mdns=y
CONFIG_PACKAGE_miniupnpd-nftables=y            # UPnP server for firewall4/nftables
CONFIG_PACKAGE_luci-app-upnp=y

##### 8. Cloudflared (DNS over HTTPS tunnel) #####
CONFIG_PACKAGE_cloudflared=y
CONFIG_PACKAGE_luci-app-cloudflared=y
CONFIG_PACKAGE_luci-i18n-cloudflared-zh-cn=y


##### 8b. HTTPS DNS Proxy (DoH client) #####
CONFIG_PACKAGE_https-dns-proxy=y
CONFIG_PACKAGE_luci-app-https-dns-proxy=y
CONFIG_PACKAGE_luci-i18n-https-dns-proxy-zh-cn=y


##### 9. DNS / DHCP Backend #####
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_smartdns=y
CONFIG_PACKAGE_luci-i18n-smartdns-zh-cn=y


##### 10. TLS / Crypto (OpenSSL backend) #####
CONFIG_PACKAGE_libustream-openssl=y
CONFIG_PACKAGE_libopenssl=y

######################################################################
# End of seed.config
######################################################################
